const app = require('../app');
const http = require('http');

const port = 8443;
app.set('port', port);

const server = http.createServer(app);

server.listen(port);
server.on('error', (error) => {
  throw error;
});

server.on('listening', () => {
  console.info(`Server is up and listening on port ${server.address().port}`);
});
